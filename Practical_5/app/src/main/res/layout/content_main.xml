<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/textintro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Merchandise Shop"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/t1"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Tshirt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textintro"
        android:onClick="show_Order"
        app:srcCompat="@drawable/t1" />

    <ImageView
        android:id="@+id/t2"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Tshirt2"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="show_Order"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:srcCompat="@drawable/t2" />

    <ImageView
        android:id="@+id/t3"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Tshirt3"
        android:onClick="show_Order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:srcCompat="@drawable/t3" />

    <ImageView
        android:id="@+id/t4"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Tshirt4"
        android:onClick="show_Order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t3"
        app:srcCompat="@drawable/t4" />



    <TextView
        android:id="@+id/t1_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="The Rick and Morty T-shirt you always wanted"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t1"
        app:layout_constraintTop_toTopOf="@+id/t1" />

    <TextView
        android:id="@+id/t2_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Franklin HighSchool T-shirt Customs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t2"
        app:layout_constraintTop_toTopOf="@+id/t2" />

    <TextView
        android:id="@+id/t3_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="House Party 2020 T-shirt"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t3"
        app:layout_constraintTop_toTopOf="@+id/t3" />

    <TextView
        android:id="@+id/t4_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="Star Wars Light Saber"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>